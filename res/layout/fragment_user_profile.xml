<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bitmap_login" >

    <com.meg7.widget.CustomShapeImageView
        android:id="@+id/img_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:scaleType="centerCrop"
        android:src="@drawable/head_profile" />

    <TextView
        android:id="@+id/label_name"
        android:background="@drawable/textview_background"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/img_user"
        android:layout_marginTop="21dp"
        android:textSize="18dp"
        android:textColor="@color/black"
        android:text="@string/name_label" />
    
    <TextView
        android:id="@+id/person_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/label_name"
        android:textColor="@color/black"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="7dp"
        android:text="@string/my_name" />
    
    <TextView
        android:id="@+id/label_belong"
        android:background="@drawable/textview_background"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/person_name"
        android:layout_marginTop="7dp"
        android:textSize="18dp"
        android:textColor="@color/black"
        android:text="@string/label_belong" />
    
    <TextView
        android:id="@+id/person_belong"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/label_belong"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="7dp"
        android:textColor="@color/black"
        android:text="@string/my_name" />
    
    <TextView
        android:id="@+id/label_gender"
        android:background="@drawable/textview_background"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/person_belong"
        android:layout_marginTop="7dp"
        android:textSize="18dp"
        android:textColor="@color/black"
        android:text="@string/label_gender" />
    
    <TextView
        android:id="@+id/person_gender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/label_gender"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="7dp"
        android:textColor="@color/black"
        android:text="@string/my_name" />
    
    <TextView
        android:id="@+id/label_position"
        android:background="@drawable/textview_background"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/person_gender"
        android:layout_marginTop="7dp"
        android:textSize="18dp"
        android:textColor="@color/black"
        android:text="@string/info_label" />
    
    <TextView
        android:id="@+id/person_position"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/label_position"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="7dp"
        android:textColor="@color/black"
        android:text="@string/person_position" />

</RelativeLayout>
